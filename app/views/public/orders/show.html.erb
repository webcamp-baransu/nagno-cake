<div class="container">
  <h4>注文履歴詳細</h4>
    <div class="row">
      <div class="col">
        <table>
          <th>注文情報</th>
            <tr>
              <th>注文日</th>
                <td><%= @order.created_at %></td>
            </tr>

            <tr>
              <th>配送先</th>
              <td><%= @order.postal_code %><%= @order.address %></td>
            </tr>

            <tr>
              <th>支払い方法</th>
                <td><%= @order.payment_method %></td>
    　　　　　　</tr>

            <tr>
              <th>ステータス</th>
                <td><%= @order. status %> </td>
              </tr>
        </table>
      </div>
      <div class="col">
            <p>請求情報</p>
            <table class="table table-bordered">
                <tr>
                    <th>商品合計</th>
                     <% @order.order_details.each do |detail| %>
                      <%=  %>
                       <% end %>
                    </td>
                </tr>
                <tr>
                    <th>配送料</th>
                    <td><%= @order.postage %></td>
                </tr>
                <tr>
                    <th>ご請求額</th>
                    <td> <%= @order.total_payment %></td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p>注文内容<p>
            <table class="table table-bordered">
                <thead>
                    <th>商品</th>
                    <th>単価(税込)</th>
                    <th>個数</th>
                    <th>小計</th>
                </thead>
                <% @order_details.each do |detail| %>
                    <tbody>
                        <td><%= detail.item.name  %></td>
                        <td><%= detail.tax_price %></td>
                        <td><%= detail.amount %></td>
                        <td><%= detail.sum_of_price.to_s(:delimited) %></td>
                </tbody>
                <% end %>
            </table>
        </div>
    </div>