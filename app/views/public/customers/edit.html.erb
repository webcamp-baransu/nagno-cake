<div class="container">
    <div class="row">
        <div class="col-md-2">
          <p>会員情報編集</p>
        </div>

        <%= form_with model: @customer, url:customers_path(@customer.id), method: :patch, local: true do |f| %>
            <div class="form-group">
                <%= f.label :name, "氏名" %>
                <%= f.text_field :last_name, placeholder:"姓" %>
                <%= f.text_field :first_name, placeholder:"名" %>
            </div>

            <div class="form-group">
                <%= f.label :kana, "フリガナ" %>
                <%= f.text_field :last_name_kana, placeholder:"セイ" %>
                <%= f.text_field :first_name_kana, placeholder:"メイ" %>
            </div>

            <div class="form-group">
                <%= f.label :postal_code, "郵便番号" %>
                <%= f.text_field :postal_code, placeholder:"ハイフンなし" %>
            </div>

            <div class="form-group">
                <%= f.label :address, "住所" %>
                <%= f.text_field :address, placeholder:"" %>
            </div>

            <div class="form-group">
                <%= f.label :telephone_number, "電話番号" %>
                <%= f.text_field :address, placeholder:"ハイフンなし" %>
            </div>

            <div class="form-group">
                <%= f.label :email, "メールアドレス" %>
                <%= f.text_field :address, placeholder:"" %>
            </div>
        <% end %>

        <%= link_to"編集内容を保存",customers_path, method: :path class: 'btn btn-primary' %>
