<div class="container">
  <h5>マイページ</h5>
  <div class="row justify-content-center mt-2">
      <div class="col-md-2">
        <h5>登録情報</h5>
      </div>

      <div class="col-md-2">
        <%= link_to"編集する",edit_customers_path, class: 'btn btn-outline-success' %>
      </div>
  </div>

  <div class="row justify-content-center mt-2">
    <div class="col-md-8">
        <table class="table table-bordered">
          <tbody>
                <tr>
                  <td>氏名</td>
                  <td>
                    <%= current_customer.last_name + current_customer.first_name %>
                  </td>
                </tr>
                <tr>
                  <td>カナ</td>
                  <td>
                    <%= current_customer.last_name_kana + current_customer.first_name_kana %>
                  </td>
                </tr>
                <tr>
                  <td>郵便番号</td>
                  <td>
                    <%= current_customer.postal_code %>
                  </td>
                </tr>
                <tr>
                  <td>住所</td>
                  <td>
                    <%= current_customer.address %>
                  </td>
                </tr>
                <tr>
                  <td>電話番号</td>
                  <td>
                    <%= current_customer.telephone_number %>
                  </td>
                </tr>
                <tr>
                  <td>メールアドレス</td>
                  <td>
                    <%= current_customer.email %>
                  </td>
                </tr>
          </tbody>
        </table>
    </div>
  </div>
  
  <div class="row justify-content-center mt-2">
    <table>
      <tbody>
        <tr>
          <td><h5>配送先</h5>
          </td>
          <td>
            <%= link_to"一覧を見る",shipping_addresses_path, class: 'btn btn-outline-primary' %>
          </td>
        </tr>
        <tr>
          <td><h5>注文履歴</h5>
          </td>
          <td>
            <%= link_to"一覧を見る",orders_path, class: 'btn btn-outline-primary' %>
          </td>
        </tr>
      </tbody>

    </table>
  </div>
</div>
