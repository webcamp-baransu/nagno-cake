<div class="container">
  <div class="row">
  <h5 class="m-1">ショッピングカート</h5>
  
  
  <div class="col-12 col-md-10 col-lg-9 mx-auto">
    </div>
    <div>
      <% unless @cart_items.present? %>
        <h6 class="my-4">カート内に何もありません(商品の追加は<%= link_to "こちら", items_path %>から)</h6>
      <% else %>
      <div>
        <table class="table text-center mt-3">
          <thead>
            <tr>
              <th>商品</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @cart_items.each do |cart_item| %>
              <tr>
                <td>
                  <%= link_to item_path(cart_item.item) do %>
                    <%= image_tag cart_item.item.image, class: "mx-1 img-wrap-cart", size: "75x75" %>
                    <%= cart_item.item.name %>
                  <% end %>
                </td>
                <td>¥<%= cart_item.item.excluding_tax_price.to_s(:delimited) %></td>
                
                <%= form_with model: cart_item do |f| %>
                  <td>
                    <%= f.select :amount, *[1..20] %>
                    <%= f.submit '変更', class: "btn btn-sm btn-outline-success mx-1" %>
                  </td>
                <% end %>
                <td>¥<%= cart_item.item.add_tax_price * cart_item.amount %></td>
                <td><%= link_to "削除", cart_item_path(cart_item), method: :delete, "data-confirm" => "本当に消しますか?", class: "btn btn-sm btn-outline-danger" %></td>
              </tr>
            <% end %>
            <tr>
              <td colspan="2"></td>
              <td class="h5">合計金額</td>
              <td class="h5">¥<%= @total.round.to_s(:delimited) %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div>
        <h3 class="my-4 text-right">
          <%= link_to "カートを空にする",cart_items_destroy_all_path, method: :delete, "data-confirm" => "カートを空にしますか?", class: "btn btn-danger" %>
          <%= link_to "　注文画面へ　", new_order_path, class: "btn btn-primary" %>
        </h3>
      </div>
      <% end %>
    </div>
  </div>
</div>