<h1>商品詳細</h1>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <% if item.image.attached? %>
        <%= image_tag item.image, size: "100x100" %>
      <% else %>
        <%= image_tag "no_image", size: "100x100" %>
      <% end %>
    </div>
    <div class="col-md-3">
      <p>商品名</p>
      <p>商品説明</p>
      <p>ジャンル</p>
      <p>税込価格（税抜価格）</p>
      <p>販売ステータス</p>
    </div>
    <div class="col-md-3">
      <% @item.each do |item| %>
      <p><%= @item.name %></p>
      <p><%= @item.description %></p>
      <p><%= @item.genre.name %></p>
      <p><%= @item.order_details.tax_price + " " + @item.excluding_tax_price %></p>
      <p><%= if item.is_active == true %>
	      販売中
	      <% else %>
	      販売停止中
	      <% end %>
	    </p>
    </div>
  </div>
</div>


<%= link_to "編集する", edit_admin_item(@item), class:"btn btn-sm btn-success" %><% end %>
