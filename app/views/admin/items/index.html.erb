<div class="container mx-auto px-5">
	<h2>商品一覧</h2>
	<div class="row">
		<%= link_to new_admin_item_path, class: "col-xs-1 btn btn-secondary rounded-circle py-0" do %>
			<p class="align-middle"><i class="fas fa-plus"></i></p>
		<% end %>
	</div>
	<table class="table table-hover">
		<thead class="thead-light">
			<tr>
		  	<th>商品ID</th>
		  	<th>商品名</th>
		  	<th>税抜価格</th>
		  	<th>ジャンル</th>
		  	<th>ステータス</th>
			</tr>
		</thead>
		<tbody>
	 	 	<% @items.each do |item| %>
	 	 	<tr>
	  	  <th>
	    	  <%= item.id %>
	   		 </th>
	   		 <th>
	    		 <%= link_to admin_item_path(item) do %>
        	 <p><%= item.name %></p>
        	 <% end %>
	    	 </th>
	       <th>
	         <%= item.excluding_tax_price %>
	    	 </th>
	     	 <th>
	     		 <%= item.genre.name %>
	       </th>
	       <th>
	      	<% if item.is_active == true %>
	      		販売中
	      	<% else %>
	      		販売停止中
	      	<% end %>
	    	 </th>
	  	 </tr>
	     <% end %>
		</tbody>
  </table>
</div>