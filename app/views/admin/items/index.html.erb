<div class="container mx-auto px-5">
	<%= flash[:notice] %>
	<h2 class="mt-2">商品一覧</h2>
	<div class="text-right">
		<%= link_to new_admin_item_path, class: "btn btn-secondary" do %>
		<i class="fas fa-candy-cane"></i>
		<% end %>
	</div>
	<table class="table table-hover m-4">
		<thead class="thead-light">
			<tr>
		  	<th>商品ID</th>
		  	<th>商品名</th>
		  	<th>税抜価格</th>
		  	<th>ジャンル</th>
		  	<th>ステータス</th>
			</tr>
		</thead>
		<tbody>
	 	 	<% @items.each do |item| %>
	 	 	<tr>
	  	  <th>
	    	  <%= item.id %>
	   		 </th>
	   		 <th>
	    		 <%= link_to admin_item_path(item) do %>
        	 <p><%= item.name %></p>
        	 <% end %>
	    	 </th>
	       <th>
	         <%= item.excluding_tax_price %>
	    	 </th>
	     	 <th>
	     		 <%= item.genre.name %>
	       </th>
	       <th>
	      	<% if item.is_active == true %>
	      		販売中
	      	<% else %>
	      		販売停止中
	      	<% end %>
	    	 </th>
	  	 </tr>
	     <% end %>
	     
		</tbody>
  </table>
  <div class="justify-content-center">
  <%= paginate @items %>
  </div>
</div>