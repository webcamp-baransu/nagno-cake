<div class="container">
<h5>会員一覧</h5>
<div class="row justify-content-center">
<div class="col-md-8">
<table class="table thead-light">
  <thead class="thead-light">
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>

        <td><%= customer.id %></td>
        <td><%= link_to admin_customer_path(customer.id) do %>
            <%= customer.last_name + ' ' + customer.first_name %>
            <% end %>
        </td>
        <td><%= customer.email %></td>
        <td><% if customer.is_deleted == false %>
        <p>有効</p>
        <% else %>
        <p>退会</p>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @customers %>
</div>
</div>
</div>