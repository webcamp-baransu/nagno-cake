<h1>ジャンル一覧・追加</h1>

<div class>
<%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
  <%= f.label :name, "ジャンル名" %>
  <%= f.text_field :name, placeholder:"ジャンル名" %>
  <%= f.submit "新規登録", class:"btn btn-success" %>
<% end %>
</div>

<table class="table">
	<thead>
		<tr>
		  <th>ジャンル名</th>
		  <th></th>
		</tr>
	</thead>
	<tbody>
	  <% @genres.each do |genre| %>
	  <tr>
	    <th>
	      <%= genre.name %>
	    </th>
	    <th>
        <%= link_to edit_admin_genre_path(genre.id), class: "btn btn-success" do %>
          <p>編集する</p>
        <% end %>
	    </th>
	  </tr>
	  <% end %>
	</tbody>
</table>