<div class="container">
<h5>ジャンル編集</h5>
<div class="row justify-content-center">

<div class>
<%= form_with model: @genre, url:admin_genre_path(@genre.id), method: :patch, local: true do |f| %>
  <div>
    <%= f.label :name, "ジャンル名" %>
    <%= f.text_field :name %>
    <%= f.submit "変更を保存", class:"btn btn-success" %>
  </div>
<% end %>
</div>
</div>
</div>