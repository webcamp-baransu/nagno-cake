<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
    <h2>注文履歴詳細</h2>
    </div>

<div class="row-xs-7">
    <table class="table">
      <tbody>
<tr>
  <th>購入者</th>
  <td><%= link_to admin_customer_path(@order.customer) do %>

      <%= @order.customer.last_name + ' ' +  @order.customer.first_name %>
      <% end %>
  </td>
</tr>
<tr>
  <th>注文日</th>
  <td><%= @order.created_at %></td>
</tr>
<tr>
  <th>配送先</th>
  <td><%= @order.postal_code %><%= @order.address %>
      <%= @order.name %>
  </td>
</tr>
<tr>
  <th>支払方法</th>
  <td><%= @order.payment_method %></td>
</tr>
<tr>
  <th>注文ステータス</th>
  <td>
    <%= form_with model: @order, url:admin_order_path, method: :patch, local: true do |f| %>
    <%= f.select :status, Order.statuses.keys, class: "status" %>
    <%= f.submit "更新" , class: "btn btn-outline-success" %>
    <% end %>
  </td>
</tr>
</tbody>
</table>


<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>
  
  <tbody>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td>
        <%= order_detail.item.name %>
      </td>
      <td>
        <%= order_detail.tax_price %>
      </td>
      <td>
        <%= order_detail.amount %>
      </td>
      <td>
        <%= order_detail.sum_of_price.to_s(:delimited) %>
      </td>

      <td>
        <%= form_with model: order_detail, url:admin_order_detail_path(order_detail.id), method: :patch do |f| %>
        <%= f.select :making_status, OrderDetail.making_statuses_i18n.invert, {prompt: false} %>
        <%= f.submit "更新" , class: "btn btn-outline-success" %>
        <% end %>
      </td>
    </tr>
    <% end %>

  </tbody>
</table>

  </div>
  <div class="col-xs-4">
    <%= render "billing", order: @order %>
  </div>
</div>
</div>

