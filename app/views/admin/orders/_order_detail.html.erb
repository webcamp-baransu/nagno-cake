<table class="table table-hover m-4">
  <thead class="thead-light">
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% order_detail.each do |order_detail| %>
    <tr>
      <td>
        <%= order_detail.item.name %>
      </td>
      <td>
        <%= order_detail.tax_price %>
      </td>
      <td>
        <%= order_detail.amount %>
      </td>
      <td>
        <%= order_detail.total_price %>
      </td>
      <td>
        <%= form_with model: [:admin, @order_detail], url:admin_order_detail, method: :patch, local: true do |f| %>
          <%= f.select :making_status, OrderDetail.making_status.keys.map {|k| [I18n.t("enums.order_detail.making_status.#{k}"), k]} %>
          <%= f.submit "更新", class="btn btn-success" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
